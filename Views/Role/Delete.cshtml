@model Role

@{
    ViewData["Title"] = "Delete Role";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Delete confirmation for @Model.RoleType</h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                <div class="form-group">
                    <label asp-for="RoleType" class="control-label"></label>
                    <input asp-for="RoleType" class="form-control" readonly />
                    <span asp-validation-for="RoleType" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>
