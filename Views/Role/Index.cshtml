@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr class="text-center">
                        <td class="text-center">
                            <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="width:100px; height:100px"/>
                        </td>
                        <td class="text-start small">@cinema.Name</td>
                        <td class="text-start small">@cinema.Description</td>
                        <td class="text-start text-nowrap">
                            <a class="btn btn-outline-primary btn-sm col-4" asp-action="Edit" asp-route-id="@cinema.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-outline-info btn-sm col-4" asp-action="Details" asp-route-id="@cinema.Id"><i class="bi bi-eye"></i> Details</a>
                            <a class="btn btn-danger text-white btn-sm col-4" asp-action="Delete" asp-route-id="@cinema.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Cinema")