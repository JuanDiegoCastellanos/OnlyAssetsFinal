@model Account

@{
    ViewData["Title"] = Model.NickName;
}

<div class="row" style="margin-bottom: 5rem;">
    <div class="col-md-8 offset-2">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        @Model.NickName
                    </div>
                </div>
                <div class="col-sm-4">
                    <img class="card-img-top" width: 100%; src="@Model.ProfilePictureURL" alt="@Model.NickName">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text small">@Model.Email</p>
                        <p class="card-text small">
                            <b>Role: </b>
                            <a asp-controller="Role" asp-action="Details" asp-route-id="@Model.CountryCreation">
                                @Model.Role.RoleType
                            </a><br />
                            <b>Person: </b>
                            <a asp-controller="Person" asp-action="Details" asp-route-id="@Model.PersonId">
                                @Model.Person.FullName
                            </a><br />
                            <b>Creation Date: </b>@Model.CreationDate.ToString("dd MM yy") <br />
                        </p>
                    </div>
                </div>
                <div class="row">
                    <p class="card-text small">
                        <b>Actors:</b>
                        <hr />
                        @foreach (var purchase in Model.Purchases)
                        {
                            <div class="col-md-4 text-center">
                                <img class="border-info rounded-circle" src="@purchase.Asset.AssetImageUrl" style="width:50px; height:50px" />
                                <br />
                                <a asp-controller="Asset" asp-action="Details" asp-route-id="@purchase.AssetId">@purchase.Asset.Name</a>
                            </div>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>