@model IEnumerable<Person>
@{
    ViewData["Title"] = "Person List";
}

<div class="row">
    <table class=" col-md-8  table table-striped table-bordered">
        <thead>
        <th>@Html.DisplayNameFor(m=> m.Name)</th>
        <th>@Html.DisplayNameFor(m=> m.SurName)</th>
        <th>@Html.DisplayNameFor(m=> m.FullName)</th>
        <th>@Html.DisplayNameFor(m=> m.BirthDate)</th>
        <th>@Html.DisplayNameFor(m=> m.Gender)</th>
        <th>@Html.DisplayNameFor(m=> m.PhoneNumber)</th>
        <th>Actions</th>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>

                    <td class="align-middle">@person.Name</td>
                    <td class="align-middle">@person.SurName</td>
                    <td class="align-middle">@person.FullName</td>
                    <td class="align-middle">@person.BirthDate</td>
                    <td class="align-middle">@person.Gender</td>
                    <td class="align-middle">@person.PhoneNumber</td>
                    <td>
                        <a class="btn btn-outline-primary" style="margin-bottom: 5px" asp-action="Edit" asp-route-id="@person.Id"><i class="bi bi-pen"></i></a>
                        <br />
                        <a class="btn btn-outline-info" style="margin-bottom: 5px" asp-action="Details" asp-route-id="@person.Id"><i class="bi bi-info-circle"></i></a>
                        <br />
                        <a class="btn btn-outline-danger" style="margin-bottom: 5px" asp-action="Delete" asp-route-id="@person.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-white mb-4" style="position:fixed; right: 25px; bottom : 35px;">
    <a asp-controller="Person" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>

</div>